<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/problemItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/itemProblemPadding">

    <TextView
        android:id="@+id/problemTitle"
        android:layout_width="@dimen/problemItemWidth"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/smallFont"
        app:layout_constraintBottom_toTopOf="@id/problemDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/problemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/smallFont"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/problemTitle" />

    <TextView
        android:id="@+id/problemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/smallFont"
        app:layout_constraintBottom_toBottomOf="@id/problemDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/problemTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>